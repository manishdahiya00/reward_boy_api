<%= form_with do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Bid Offer Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :offer_name, class: "form-label" %>
            <%= f.text_field :offer_name, class: "form-control", placeholder: "Enter offer name", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :offer_price, class: "form-label" %>
            <%= f.number_field :offer_price, class: "form-control", placeholder: "Enter offer price", step: "0.01", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :started_at, class: "form-label" %>
            <%= f.datetime_local_field :started_at, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([["Active", true], ["Inactive", false]], selected: true), {}, { class: "form-select" } %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :offer_image_url, class: "form-label" %>
            <%= f.url_field :offer_image_url, class: "form-control", placeholder: "Enter offer image URL", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :offer_video_url, class: "form-label" %>
            <%= f.url_field :offer_video_url, class: "form-control", placeholder: "Enter offer video URL" %>
          </div>
          <div class="mb-3">
            <%= f.label :ended_at, class: "form-label" %>
            <%= f.datetime_local_field :ended_at, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :offer_desc, class: "form-label" %>
            <%= f.text_area :offer_desc, class: "form-control", placeholder: "Enter offer description", rows: 4, required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_bid_offers_path, class: "btn btn-secondary" %>
    </div>
  </div>

<% end %>