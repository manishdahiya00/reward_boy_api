<div class="container-fluid py-4">
  <% if notice %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="header d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Listing Questions</h2>
    <%= link_to "Add Question", new_admin_quiz_question_path, class: "btn btn-success" %>
  </div>
  <% if @questions.present? %>
    <div class="table-responsive table-bordered">
      <table class="table table-hover ">
        <thead class="table-light">
          <tr>
            <th>Id</th>
            <th>Question</th>
            <th>Option 1</th>
            <th>Option 2</th>
            <th>Option 3</th>
            <th>Option 4</th>
            <th>Answer</th>
            <th>Date Time</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.question %></td>
              <td><%= question.option1 %></td>
              <td><%= question.option2 %></td>
              <td><%= question.option3 %></td>
              <td><%= question.option4 %></td>
              <td><%= question.correct_answer %></td>
              <td><%= question.created_at.strftime("%d/%m/%y %I:%M %p") %></td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to "Edit", edit_admin_quiz_question_path(question), class: "btn btn-primary btn-sm" %>
                  <%= button_to "Delete", admin_quiz_question_path(question), method: :delete, data: { confirm: "Are you sure you want to delete this question?" }, class: "btn btn-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="pagination">
      <%= will_paginate @questions, class: "page-item justify-content-center" %>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      No Questions Found
    </div>
  <% end %>
</div>
