<%= form_for([:admin, offer], html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if offer.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h5>
      <ul class="mb-0">
        <% offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Offer Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :subtitle, class: "form-label" %>
            <%= f.text_field :subtitle, class: "form-control", placeholder: "Enter subtitle", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :amount, class: "form-label" %>
            <%= f.text_field :amount, class: "form-control", placeholder: "Enter amount", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", placeholder: "Enter descripton", required: true %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :small_img_url, class: "form-label" %>
            <%= f.text_field :small_img_url, class: "form-control", placeholder: "Enter icon image url", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :large_img_url, class: "form-label" %>
            <%= f.text_field :large_img_url, class: "form-control", placeholder: "Enter banner image url", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([["Active", true], ["Inactive", false]], selected: true), {}, { class: "form-select" } %>
          </div>
           <div class="mb-3">
            <%= f.label :action_url, class: "form-label" %>
            <%= f.text_field :action_url, class: "form-control", placeholder: "Enter action url", required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_offers_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
