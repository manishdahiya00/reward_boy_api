<div class="container-fluid py-4 ">
  <% if notice %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <h2 class="mb-4">Offer Details</h2>
  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Basic Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>ID:</strong> <span><%= @offer.id %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Title:</strong> <span><%= @offer.title %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Subtitle:</strong> <span><%= @offer.subtitle %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Amount:</strong> <span><%= @offer.amount %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Images</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Icon Image:</strong>
              <img src="<%= @offer.try(:small_img_url) %>" alt="offer avatar" class="rounded-circle" width="40" height="40"
                   onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';">
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Banner Image:</strong>
              <img src="<%= @offer.try(:large_img_url) %>" alt="offer avatar" class="rounded-circle" width="40" height="40"
                   onerror="this.onerror=null;this.src='https://cdn.pixabay.com/photo/2014/03/24/17/21/wrong-295503_640.png';">
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Additional Information</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <strong>Status:</strong> <span><%= @offer.status %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Description</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <p style="overflow-wrap: break-word;word-break: break-word;max-width: 100%;"><%= @offer.description %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
