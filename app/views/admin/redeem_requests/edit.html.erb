<%= form_for([:admin, @redeem], html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if @redeem.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(@redeem.errors.count, "error") %> prohibited this redeem from being saved:</h5>
      <ul class="mb-0">
        <% @redeem.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Redeem Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :upi_id, class: "form-label" %>
            <%= f.text_field :upi_id, class: "form-control", disabled: true , required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :user_id, class: "form-label" %>
            <%= f.text_field :user_id, class: "form-control", disabled: true , required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([["PENDING"], ["PROCESSING"], ["COMPLETED"]], selected: true), {}, { class: "form-select" } %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :coins, class: "form-label" %>
            <%= f.text_field :coins, class: "form-control",disabled: true , required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :amount, class: "form-label" %>
            <%= f.text_field :amount, class: "form-control",disabled: true , required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_redeem_requests_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
