<%= form_for([:admin, payout], html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if payout.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading"><%= pluralize(product.errors.count, "error") %> prohibited this payout from being saved:</h5>
      <ul class="mb-0">
        <% payout.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Payout Details</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :image, class: "form-label" %>
            <%= f.text_field :image, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :amounts, class: "form-label" %>
            <%= f.text_field :amounts, class: "form-control", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, options_for_select([["Active", true], ["Inactive", false]], selected: true), {}, { class: "form-select" } %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_payouts_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
